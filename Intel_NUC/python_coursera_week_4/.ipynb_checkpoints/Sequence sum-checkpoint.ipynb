    "def sum(summary=0):\n",
    "    num = -1\n",
    "    try:\n",
    "        num = int(input())\n",
    "    except ValueError as err:\n",
    "        print(err)\n",
    "        print('Enter the number') \n",
    "    else:\n",
    "        summary += num\n",
    "    if num != 0:\n",
    "        return sum(summary)\n",
    "    return summary\n",
    "    \n",
    "print(sum())"
   ]
